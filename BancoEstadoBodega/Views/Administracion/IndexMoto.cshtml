@model IEnumerable<BancoEstadoBodega.Models.ServicioMoto>

@{

}
<!-- Seccion que muestra la lista de productos -->
<div class="row">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row">
                
                @if (ViewContext.HttpContext.User.IsInRole("administradores"))
                {
                    <div class="col-md-2 pull-right">
                        <p align="right">
                            <a class="btn btn-success" title="Detalles" href="../../Administracion/ServicioMoto"> <span class="glyphicon glyphicon-plus"></span>Agregar</a>
                        </p>

                    </div>
                }
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> Lista Servicio Moto</h3>
            </div>
            <div class="panel-body">

               
                <br />
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr class="success">
                                <th>Retiro</th>
                                <th>Entrega</th>
                                <th>Recibe</th>
                                <th>Descripcion</th>
                                <th>Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.DireccionRetiro </td>
                                    <td>
                                        @item.DireccionEntrega
                                    </td>
                                    <td> @item.PersonaRecibe </td>
                                    <td> @item.Descripcion </td>

                                    <td class="text-center">

                                       <a class="btn btn-success btn-xs" title="Detalles" href="../../Administracion/Detalles/@item.MotoID"> <span class="glyphicon glyphicon-folder-open"></span>Ver mas</a>
                                        <br>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
        $('[rel="popover"]').popover({
            container: 'body',
            html: true,
            content: function () {
                var clone = $($(this).data('popover-content')).clone(true).removeClass('hide');
                return clone;
            }
        }).click(function (e) {
            e.preventDefault();
        });
    });
</script>