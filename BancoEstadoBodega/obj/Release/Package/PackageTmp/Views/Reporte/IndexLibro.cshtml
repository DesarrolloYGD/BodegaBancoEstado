@model IEnumerable<BancoEstadoBodega.Models.LibroDiario>
@{
    ViewBag.Title = "LibroDiario";
}


<!-- Seccion que muestra la lista de productos -->
<div class="row">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 pull-right">
                    <p align="right">
                        <button onclick="Excel()" class="btn btn-primary"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> exportar Libro(s)</button>
                    </p>
                </div>
                @if (ViewContext.HttpContext.User.IsInRole("administradores"))
                {
                    <div class="col-md-2 pull-right">
                        <p align="right">
                            <a class="btn btn-success" title="Detalles" href="../../Reporte/CrearLibro"> <span class="glyphicon glyphicon-plus"></span>Agregar</a>
                        </p>

                    </div>
                }
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span>Libro Diario</h3>
            </div>
            <div class="panel-body">
                @if (ViewContext.HttpContext.User.IsInRole("administradores"))
                {
                    <form action="@Url.Action("IndexLibro", "Reporte")" enctype="multipart/form-data" method="post" class="form-inline">

                        <div class="form-group">
                            <label for="IDEmpresa">Empresa</label>
                            @Html.DropDownList("IDEmpresas", null, "Todos", htmlAttributes: new { @class = "form-control input-sm" })
                        </div>

                        <button type="submit" class="btn btn-default btn-sm">Filtrar</button>
                    </form>
                }

                <br />
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr class="success">
                                <th>Empaque</th>
                                <th>Despacho</th>
                                <th>Destino</th>
                                <th>Mandante</th>
                                <th>Detalle</th>
                            </tr>
                            
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.TipoEmpaque.descripcion</td>
                                    <td> @item.TipoDespacho.descripcion</td>
                                    <td> @item.Destino</td>
                                    <td> @item.Mandante </td>
                                    <td class="text-center">
                                        <a class="btn btn-success btn-xs" title="Detalles" href="../../Reporte/DetalleLibro/@item.ID"> <span class="glyphicon glyphicon-folder-open"></span>Ver mas</a>
                                        <br>
                                        <a class="btn btn-success btn-xs" title="Detalles" href="../../Reporte/EditarLibro/@item.ID"> <span class="glyphicon glyphicon-edit"></span>Editar Datos</a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ventana agregar producto/-->

<div class="modal fade" id="ModalExportarLibro">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("ResumenDeVentas", "Reporte")" enctype="multipart/form-data" method="post">
                <div class="modal-header btn-primary">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Exportar Libro</h4>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <span class="input-group-addon">Fecha Inicio</span>
                        <input type="hidden" id="fechaInicio" name="fechaInicio" value="@ViewBag.fechaInicio" />
                        <input class="form-control" type="date" id="fechaIn" name="fechaIn" /> 
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Fecha Fin</span>
                        <input type="hidden" id="fechaFin" name="fechaFin" value="@ViewBag.fechaFin" />
                        <input class="form-control" type="date" id="fechaF" name="fechaF" />     
                    </div>
                    <br />
                    Tip: Para exportar solamente libros del presente mes, deje los campos de fecha vacios.
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-primary" name="submitButton" value="Descargar Excel" />
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
        $('[rel="popover"]').popover({
            container: 'body',
            html: true,
            content: function () {
                var clone = $($(this).data('popover-content')).clone(true).removeClass('hide');
                return clone;
            }
        }).click(function (e) {
            e.preventDefault();
        });
    });

    function Excel() {
        $('#ModalExportarLibro').modal('show');
    }




</script>




