@model BancoEstadoBodega.Models.LibroDiarioViewModel

<div class="row">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 pull-right">
                    <p align="right">
                        <button onclick="Excel()" class="btn btn-primary"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> exportar Libro(s)</button>
                    </p>
                </div>
                @if (ViewContext.HttpContext.User.IsInRole("administradores"))
                {
                    <div class="col-md-2 pull-right">
                        <p align="right">
                            <a class="btn btn-success" title="Detalles" href="../../Reporte/CrearLibro"> <span class="glyphicon glyphicon-plus"></span>Agregar</a>
                        </p>

                    </div>
                }
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span>Libro Diario</h3>
            </div>
            <div class="panel-body">
                @if (ViewContext.HttpContext.User.IsInRole("administradores"))
                {
                    <form action="@Url.Action("IndexLibro2", "Reporte")" enctype="multipart/form-data" method="post" class="form-inline">

                        <div class="form-group">
                            <label for="IDEmpresa">Empresa</label>
                            @Html.DropDownListFor(x => x.EmpresaSeleccionada, Model.Empresas,"Todos", htmlAttributes: new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            <label for="fechaIn">Fecha Inicio</label>
                            <input type="hidden" id="fechaInicio" name="fechaInicio" value="@ViewBag.fechaInicio" />
                            <input class="form-control" type="date" id="fechaIn" name="fechaIn" />
                        </div>
                        <div class="form-group">
                            <label for="fechaF">Fecha Fin</label>
                            <input type="hidden" id="fechaFin" name="fechaFin" value="@ViewBag.fechaFin" />
                            <input class="form-control" type="date" id="fechaF" name="fechaF" />
                        </div>

                        <input type="submit" name="submitButton" value="Buscar" class="btn btn-default btn-sm">
                        <input type="submit" name="submitButton" value="Descargar Excel" class="btn btn-default btn-sm">
                    </form>
                }

                <br />
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr class="success">
                                <th>Empaque</th>
                                <th>Despacho</th>
                                <th>Destino</th>
                                <th>Fecha Entrega</th>
                                <th>Mandante</th>
                                <th>Detalle</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.Libros)
                            {
                                <tr>
                                    <td> @item.TipoEmpaque.descripcion</td>
                                    <td> @item.TipoDespacho.descripcion</td>
                                    <td> @item.Destino</td>
                                    <td> @item.FechaEntrega</td>
                                    <td> @item.Mandante </td>
                                    <td class="text-center">
                                        <a class="btn btn-success btn-xs" title="Detalles" href="../../Reporte/DetalleLibro/@item.ID"> <span class="glyphicon glyphicon-folder-open"></span>Ver mas</a>
                                        <br>
                                        <a class="btn btn-success btn-xs" title="Detalles" href="../../Reporte/EditarLibro/@item.ID"> <span class="glyphicon glyphicon-edit"></span>Editar Datos</a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
        $('[rel="popover"]').popover({
            container: 'body',
            html: true,
            content: function () {
                var clone = $($(this).data('popover-content')).clone(true).removeClass('hide');
                return clone;
            }
        }).click(function (e) {
            e.preventDefault();
        });
    });

    function Excel() {
        $('#ModalExportarLibro').modal('show');
    }
</script>

<script>
    $(document).ready(function () {
        var a = $("#fechaInicio").val();
        var b = $("#fechaFin").val();
        $("#fechaIn").val($("#fechaInicio").val());
        $("#fechaF").val($("#fechaFin").val());
    });
</script>

<script>
    $(document).ready(function ()
    {
        $("#fechaIn").change(function ()
        {
            if ($("#fechaF").val() != "")
            {
                var fechai = $("#fechaIn").val();
                var fechaf = $("#fechaF").val();
                if (Date.parse(fechai) > Date.parse(fechaf))
                {
                    alert("La fecha de inicio no puede ser superior a la de fin");
                    $("#fechaF").val("");
                    $("#fechaIn").val("");
                }
            }
        })

        $("#fechaF").change(function () {
            if ($("#fechaIn").val() != "") {
                var fechai = $("#fechaIn").val();
                var fechaf = $("#fechaF").val();
                if (Date.parse(fechai) > Date.parse(fechaf)) {
                    alert("La fecha de inicio no puede ser superior a la de fin");
                    $("#fechaF").val("");
                    $("#fechaIn").val("");
                }
            }
        })
    });
</script>
